<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/network"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/networkname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultText"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/networkcountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/networkname"
            android:layout_toRightOf="@+id/networkname"
            android:textColor="@color/defaultText"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/networkmcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/networkname"/>
        <TextView
            android:id="@+id/networkmnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/networkname"
            android:layout_toEndOf="@+id/networkmcc"
            android:layout_toRightOf="@+id/networkmcc"/>
    </RelativeLayout>
    <View
        android:id="@+id/selected_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSelected"
        android:visibility="invisible" />
    <!--<View style="@style/Divider"/>-->
</android.support.v7.widget.CardView>